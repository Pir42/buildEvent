<div class="show">
  <p id="notice"><%= notice %></p>

  <h1>
    <%= @event.name %>
  </h1>

  <p class="dateevents">
    Commence le <strong><%= @event.start_time.strftime("%d %B %Y") %> à <%= @event.start_time.strftime("%H:%M") %></strong>
    et termine le <strong><%= @event.end_time.strftime("%d %B %Y") %> à <%= @event.start_time.strftime("%H:%M") %></strong>
  </p>

  <p class="desc">
    <%= @event.description %>
  </p>

  <p class="place">
    A <strong><%= @event.place %></strong>
  </p>

  <p class="user">
    Par <span class="blue"><%= @event.user.username %></span>
  </p>

  <div class="link">
    <%= link_to 'Retour', events_path %>
    <%= link_to 'Modifier votre event', edit_event_path(@event) if @current_user.id == @event.user_id %>
    <span id="delete"><%= link_to 'Supprimer', @event, method: :delete, data: { confirm: 'Are you sure?' } if @current_user.id == @event.user_id %></span>
  </div>
</div>
