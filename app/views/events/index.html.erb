<div class="containerFlex">
  <div class="indexUser">
    <div class="user">
      <div class="avatar"></div>
      <div><p class="username"><%= @user.username %></p></div>
    </div>
  </div>
  <div class="indexCalendar">
    <%= month_calendar events: @events do |date, meetings| %>
    <%= date.strftime("%e") %>
    <div id="roundBlock">
      <% meetings.each do |meeting| %>
      <span id="round"><%= link_to "_", meeting %>
      </span>
      <% end %>
    </div>
    <% end %>
  </div>
  <div class="indexEvents">
    <div class="containerMargin">
      <h1><span id="blueE">e</span>vents</h1>
      <% @events.each do |event| %>
      <div class="eventsFlex">
        <div class="date">
          <p class="number"><%= event.start_time.strftime("%e") %></p>
          <p class="month"><%= event.start_time.strftime("%b") %></p>
        </div>
        <div class="eventInfos">
          <h3><%= link_to event.name, event %></h3>
          <p class="place"><%= event.place %></p>
          <p class="user">Par <%= event.user.username %></p>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'home.js' %>
